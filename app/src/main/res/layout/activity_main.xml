<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiajia.mytestdemo.MainActivity">

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="账号名"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/et_acoount"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="密码"
        android:ems="10"
        android:layout_below="@+id/et_acoount"
        android:layout_alignEnd="@+id/et_acoount"
        android:layout_marginTop="28dp"
        android:id="@+id/et_pwd"/>

    <CheckBox
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:layout_alignStart="@+id/et_pwd"
        android:layout_marginTop="16dp"
        android:id="@+id/chb_rempwd"/>

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chb_rempwd"
        android:layout_alignStart="@+id/chb_rempwd"
        android:layout_marginTop="27dp"
        android:id="@+id/btn_login"
        android:layout_alignEnd="@+id/et_pwd"/>
</RelativeLayout>
